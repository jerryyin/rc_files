{
  "suggest.minTriggerInputLength": 3,
  "suggest.maxCompleteItemCount": 50,
  "suggest.labelMaxLength": 50,
  "semanticTokens.enable": true,
  "diagnostic.virtualText": true,
  "diagnostic.errorSign": "ï†ˆ",
  "python.analysis.typeCheckingMode": "off",
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "filetypes": ["c", "cc", "cpp", "c++", "cuda"],
      "rootPatterns": [".clangd", ".clang-tidy", ".clang-format", "compile_commands.json", "compile_flags.txt", ".git/"],
      "args": [
        "--background-index",
        "--clang-tidy",
        "--all-scopes-completion",
        "--completion-style=detailed",
        "--header-insertion=iwyu",
        "--pch-storage=memory"
      ],
    },
    "mlir": {
      "command": "iree-mlir-lsp-server",
      "filetypes": ["mlir"],
      "rootPatterns": ["compiler/src/iree", "runtime/src/iree", "tools/iree-compile", "tools/iree-opt"],
    },
    "triton-mlir": {
      "command": "sh",
      "args": ["-c", "TRITON_REPO_ROOT=$(echo ~/triton-mi450) exec ~/scripts/triton/triton_lsp.py \"$@\"", "--"],
      "filetypes": ["mlir"],
      "rootPatterns": ["python/triton/__init__.py", "include/triton", "bin/triton-lsp.cpp"]
    }
  }
}
